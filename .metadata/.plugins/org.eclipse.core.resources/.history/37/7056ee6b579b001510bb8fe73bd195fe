        // TODO Auto-generated method stub
    }

    private void personRemoved(long personId) {
        // TODO Auto-generated method stub
    }
	
	/**
     * @see MessageListener#onMessage(Message)
     */
    public void onMessage(Message message) {
        // TODO Auto-generated method stub
        
    }

}
